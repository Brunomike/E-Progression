<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="icon" type="image/png" sizes="256x256" href="/assets/img/logo.png">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>   
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <% if(msgSuccessReset.length>0){ %>
      
      <div class="alert alert-success" role="alert">
        <%= msgSuccessReset %> 
      </div>
  <% } %>
  <% if(msgError.length > 0){%> 
    <div class="alert">
      <% if (msgError.length>0) {%>
        <% msgError.forEach((err)=>{ %>               
            <div class="alert-item alert-danger">
            <%= err %> 
          </div>                          
        <% }) %> 
      <%} %>           
    </div>
  <% } %> 
  <% if(msgFailureReset.length>0){ %>
    
    <div class="alert alert-danger" role="alert">
      <%= msgFailureReset %> 
    </div>
  <% } %>
    <div class="container" id="container">
      <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-right">
            <img
              src="/assets/img/logo.png"
              alt="Logo"
              width="400px"
              height="400px"
            />
          </div>
        </div>
      </div>

      <div class="form-container log-in-container">

        <form
          action="/auth/forgot-password"
          method="post"
          class="login-form needs-validation"
          novalidate
        >        
        <br>
        <h2>Password Reset</h2>        
        <br>
          <div class="mb-3">
            <label for="emailAddress" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="emailAddress"
              name="email_address"
              required
            />
            <div class="valid-feedback">✔</div>
            <div class="invalid-feedback">Enter your Email Address!</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <input
              type="password"
              class="form-control"
              id="passwordF"
              name="user_password"
              required
            />
            <span class="input-group-text" id="basic-addon3" style="height:38px; margin-top:8px; cursor: pointer;"><i class="bi bi-eye-slash" id="togglePasswordF"></i></span>
            </div>
            <div class="invalid-feedback">Enter your password!</div>
            <div class="valid-feedback">✔</div>
          </div>   
          <div class="mb-3">
            <label for="c-password" class="form-label">Confirm Password</label>
            <input
              type="password"
              class="form-control"
              id="c-passwordF"
              name="user_confirm_password"
              required
            />
            <div class="invalid-feedback">Confirm your password!</div>
            <div class="valid-feedback">✔</div>
          </div>        
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">   
          <button type="submit" class="btn btn-primary">Submit</button>
          <br />                               
            <a href="/auth/login" id="signup">Back to Login? Sign In</a>    
            <br>      
        </form>
      </div>
    </div>
    <script>            
      //Toggle password visibility register new user page
      const togglePassword1 = document.querySelector("#togglePasswordF");
      const password=document.body.querySelector('#passwordF');
      const confirmPassword=document.body.querySelector('#c-passwordF');
     
         togglePassword1.addEventListener('click', (e) =>{                                              
             const pass1=password.getAttribute('type') === 'password' ? 'text' : 'password';
             password.setAttribute('type',pass1);
             const pass2=confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';                                   
             confirmPassword.setAttribute('type',pass2);
             togglePassword1.classList.toggle('bi-eye')                  
     })
             </script>

    <script src="/js/form-validation.js"></script>
    <script src="/js/pass-reset.js"></script>
  </body>
</html>
